doctype html
html(lang="en")
	head
		title Level Comments
		meta(charset="UTF-8")
		link(href="/assets/css/browser.css?v=1", type="text/css", rel="stylesheet")
		link(rel="icon", href="/assets/like.png")
		meta(id="meta-title", property="og:title", content="Level Comments")
		meta(id="meta-desc", property="og:description", content="View the comments of a Geometry Dash level!")
		meta(id="meta-image", name="og:image", content="/assets/like.png", itemprop="image")
		meta(name="twitter:card", content="summary")
	body.levelBG
		#everything
			#postComment.popup
				.brownBox.bounce.center.supercenter(style={ height: "80%", width: "110vh" })
					p#charcount(style={ position: "absolute", right: "1vh", "margin-top": "0", "text-align": "left" }) 150
					h1.smaller.center(style={ "font-size": "5.5vh" }) Add Comment
					textarea#content(placeholder="Insert comment", maxlength="150", style={ margin: "2% 0" })
					form(action="nothing lol")
						h3.center GD Username
						input#username(type="text", name="gdbrowser", maxlength="50", style={ height: "8vh", width: "90%", "text-align": "center", "margin-top": "0.5%" })
						h3.center(style={ "margin-top": "2%" }) GD Password
						input#password(type="text", name="password", maxlength="50", style={ height: "8vh", width: "90%", "text-align": "center", "margin-top": "0.5%" })
					div(style={ "min-height": "16%", "max-height": "16%" })
						p#message(style={ padding: "0 10%", "margin-top": "1.5%" })
					img.gdButton.postbutton.center(src="/assets/textbuttons/cancel.png", style={ height: "10%", "margin-right": "1%" }, onclick="$('#postComment').hide(); $('textarea').val('')")
					img#submitComment.gdButton.postbutton.center(src="/assets/textbuttons/submit.png", style={ height: "10%", "margin-left": "1%" }, type="submit")

			#likeComment.popup
				.brownBox.bounce.center.supercenter(style={ height: "75%", width: "100vh" })
					h1.smaller.center(style={ "font-size": "5.5vh" }) Vote
					img#likebtn.inline.gdButton.likeButton(src="/assets/smashLike.png")
					img#dislikebtn.inline.gdButton.likeButton.youAreNotTheOne(src="/assets/smashDislike.png")
					form(action="nothing lol")
						h3.center GD Username
						input#like-username(type="text", name="gdbrowser", maxlength="50", style={ height: "8vh", width: "90%", "text-align": "center", "margin-top": "0.5%" })
						h3.center(style={ "margin-top": "2%" }) GD Password
						input#like-password(type="password", name="password", maxlength="50", style={ height: "8vh", width: "90%", "text-align": "center", "margin-top": "0.5%" })
					div(style={ "min-height": "18%", "max-height": "18%" })
						p#likeMessage(style={ padding: "0 10%", "margin-top": "2.5%" })
					img.gdButton.postbutton.center(src="/assets/textbuttons/cancel.png", style={ height: "10%", "margin-right": "1%" }, onclick="$('#likeComment').hide(); $('#likebtn').trigger('click');")
					img#submitVote.gdButton.postbutton.center(src="/assets/textbuttons/submit.png", style={ height: "10%", "margin-left": "1%" }, type="submit")

			div(style={ position: "absolute", bottom: "0", left: "0", width: "100%" })
				img.cornerPiece(src="/assets/corner.png", style={ width: "7%" })

			div(style={ position: "absolute", bottom: "0", left: "0", width: "100%", "text-align": "right" })
				img.cornerPiece(src="/assets/corner.png", style={ width: "7%", transform: "scaleX(-1)" })

			div(style={ "text-align": "right", position: "absolute", top: "1%", right: "1.25%" })
				h2#pagenum.smallGold

			.brownBox.center.supercenter(style={ width: "135vh", height: "82%", "margin-top": "-0.25%" })
				#commentBox.lightBox.center.dragscroll(style={ margin: "4.5% auto", width: "115vh", height: "86%", "background-color": "#934E27" })

				.supercenter(style={ left: "97%", top: "15.5%", height: "8.5%" })
					img#lastPage.gdButton(src="/assets/double-arrow.png", style={ height: "90%" })

				#firstPage.supercenter(style={ left: "97%", top: "27.5%", height: "8.5%", display: "none" })
					img.gdButton.refreshBtn(src="/assets/double-arrow.png", style={ height: "90%", transform: "scaleX(-1)" })

				#refreshButton.supercenter(style={ left: "97%", top: "27.5%", height: "10%" })
					img.gdButton.refreshBtn(src="/assets/refresh.png", style={ height: "90%" })

				.supercenter(style={ left: "3%", top: "15%", height: "10%" })
					img#topSort.gdButton(src="/assets/sort/likes.png", style={ height: "90%" })

				.supercenter(style={ left: "3%", top: "25.5%", height: "10%" })
					img#timeSort.gdButton(src="/assets/sort/time.png", style={ height: "90%" })

				.supercenter(style={ left: "3%", top: "36%", height: "10%" })
					img#compactMode.gdButton(src="/assets/compact-off.png", style={ height: "90%" })

				.supercenter(style={ left: "3%", top: "63%", height: "11%" })
					img#autoMode.gdButton(src="/assets/playbutton.png", style={ height: "90%" })

				#pageDown.supercenter(style={ left: "3%", top: "50%", height: "10%", display: "none" })
					img.gdButton(src="/assets/arrow-left.png", style={ height: "95%" })

				#pageUp.supercenter(style={ left: "97%", top: "50%", height: "10%" })
					img.gdButton(src="/assets/arrow-right.png", style={ height: "95%" })

				.supercenter(style={ top: "4.8%", height: "10%", width: "100%" })
					h2#liveText.smallGold.inline(style={ display: "none", "font-size": "4vh", color: "red", margin: "0.4vh 3vh 0 0" }) [LIVE]
					h1#levelName.smaller.inline
					a#authorLink
						h2#levelAuthor.smallGold.inline.gdButton(style={ margin: "0.8vh 0 0 3vh" })

				.supercenter(style={ top: "100%", height: "10%", width: "100%" })
					h2#levelVersion.smallGold.inline
					a#levelLink
						h2#levelID.smallGold.inline.gdButton(style={ "margin-left": "6vh" })

				#leaveComment(style={ display: "none", position: "absolute", bottom: "0", right: "0", width: "14%", "text-align": "right", transform: "translate(30%, 40%)" })
					img.gdButton(src="/assets/comment.png", style={ width: "60%" }, onclick="$('#content').trigger('input'); $('#postComment').show();")

			div(style={ position: "absolute", top: "2%", left: "1.5%", width: "10%", height: "25%", "pointer-events": "none" })
				img#backButton.gdButton.yesClick(src="/assets/back.png", style={ height: "30%" })

		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/pixi.js/6.2.2/browser/pixi.js")
		script(type="module", src="/iconkit/icon.js")
		script(type="module", src="/vendor/index.js")
		script(type="module", src="/misc/global.js")
		script(type="module", src="/dragscroll.js")
		script(type="module", src="/scripts/comments.js")