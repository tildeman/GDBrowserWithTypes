<div class="commentBG">
	<div class="comment">
		<img class="inline statusIcon" src="{{statusIcon}}" style="display: {{#if compactMode}}inline-block{{else}}none{{/if}}; margin-right: 0.8%; height: 7vh">
		<h2 class="inline">{{accountUsername}}</h2>
		<div class="commentAlign">
			<p class="pre commentText" style="color: rgb({{commentColor}})">{{commentItem.content}}</p>
		</div>
	</div>
	<p class="commentDate">{{commentItem.date}}</p>
	<div class="commentLikes">
		<img id="likeImg" class="likeComment gdButton inline" commentID="{{commentItem.ID}}" style="{{#if disliked}}transform: translateY(25%); {{/if}}margin-right: 0.4%; height: 4vh" src="/assets/{{#if disliked}}dis{{/if}}like.png">
		<h3 class="inline">{{commentItem.likes}}</h3><br>
	</div>
</div>