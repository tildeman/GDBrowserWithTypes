doctype html
html(lang="en")
	head
		//- TODO: This does get repetitive at times
		title Gauntlets
		meta(charset="UTF-8")
		link(href="/assets/css/browser.css?v=1", type="text/css", rel="stylesheet")
		link(rel="icon", href="/assets/gauntlet.png")
		meta(id="meta-title", property="og:title", content="Gauntlets")
		meta(id="meta-desc", property="og:description", content="Because RobTop is such a coward for not admitting that they're basically the same as Map Packs but with decoration.")
		meta(id="meta-image", name="og:image", content="/assets/gauntlet.png", itemprop="image")
		meta(name="twitter:card", content="summary")
	body.levelBG.darkBG(style={ "overflow-y": "auto" })
		#everything.center(style={ width: "100%", height: "100%" })
			div(style={ position: "absolute", top: "2%", left: "-1.95%", width: "10%", height: "25%", "pointer-events": "none" })
				img#backButton.gdButton(src="/assets/back.png")

			.center(style={ width: "100%", "margin-top": "2.5%", "margin-bottom": "1%" })
				img(src="/assets/gauntlets.png", style={ width: "50%" })

			#gauntletList
				br
				each gauntletItem in gauntlets
					.gauntlet
						a(href=`/search/*?gauntlet=${gauntletItem.id}`)
							img(src=`/assets/gauntlets/${gauntletItem.name.toLowerCase()}.png`, style={ height: "300%" })
							br
							h3.gauntletText
								= gauntletItem.name
								br
								| Gauntlet

			br

		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
		script(type="module", src="/vendor/index.js")
		script(type="module", src="/misc/global.js")