doctype html
html(lang="en")
	head
		title Messages
		meta(charset="UTF-8")
		link(href="/assets/css/browser.css?v=1", type="text/css", rel="stylesheet")
		link(rel="icon", href="/assets/messages.png")
		meta(id="meta-title", property="og:title", content="Messages")
		meta(id="meta-desc", property="og:description", content="Read, write, and manage your Geometry Dash messages!")
		meta(id="meta-image", name="og:image", content="/assets/messages.png", itemprop="image")
		meta(name="twitter:card", content="summary")
	body.levelBG
		#everything
			#access
				.brownBox.center.supercenter(style={ height: "65%", width: "110vh" })
					h1.smaller.center(style={ "font-size": "5.5vh", "margin-top": "1.5%" }) Sign In
					form
						h3.center(style={ "margin-top": "4%" }) GD Username
						input#username(type="text", name="gdbrowser", maxlength="50", style={ height: "8vh", width: "90%", "text-align": "center", "margin-top": "0.5%" })
						h3.center(style={ "margin-top": "4%" }) GD Password
						input#password(type="password", name="password", maxlength="50", style={ height: "8vh", width: "90%", "text-align": "center", "margin-top": "0.5%" })
					div(style={ "margin-bottom": "3%" })
						p#message(style={ padding: "0% 10%", "margin-top": "1.5%" })
					img#cancelBack.gdButton.postbutton.center(src="/assets/textbuttons/cancel.png", style={ height: "11%", "margin-right": "1%" })
					img#logIn.gdButton.postbutton.center(src="/assets/textbuttons/submit.png", style={ height: "11%", "margin-left": "1%" }, type="submit")

			#loading(style={ display: "none" })
				.brownBox.center.supercenter(style={ height: "65%", width: "110vh" })
					div(style={ position: "absolute", top: "25%", width: "100%" })
						p#msgCount(style={ "font-size": "3.5vh", "margin-bottom": "5%" })
						img#loadingicon.spin.noSelect(src="/assets/loading.png", style={ width: "10%" })

			#messages(style={ display: "none" })
				.brownBox.center.supercenter(style={ height: "85%", width: "138vh" })
					h1.smaller.center(style={ "font-size": "5.5vh", "margin-top": "1.5%" }) Messages
					#msgList.lightBox.center(style={ "margin-bottom": "0.7%" })

					div(style={ "text-align": "left" })
						img#purge.gdButton.inline(src="/assets/trash-square.png", style={ height: "14vh" })
						#selectCount(style={ display: "none", "pointer-events": "none" })
							h3.center(style={ "font-size": "3vh", "margin-top": "12%" })
						img#selectAll.gdButton.inline(src="/assets/select-all.png", style={ width: "15%", margin: "0 0 0.5% 2%" })
						img#selectAll.gdButton.inline(src="/assets/select-none.png", style={ display: "none", width: "15%", margin: "0 0 0.5% 2%" })

					img#refreshMessages(src="/assets/refresh.png", style={ height: "13%", position: "absolute", right: "0", bottom: "0"})

					div(style={ position: "absolute", left: "0.5%", top: "45%", height: "11%"})
						img#pageDown.gdButton(style={ display: "none", height: "90%" }, src="/assets/arrow-left.png")

					div(style={ position: "absolute", right: "0.5%", top: "45%", height: "11%"})
						img#pageUp.gdButton(style={ display: "none", height: "90%" }, src="/assets/arrow-right.png")

			#confirmDelete.popup(style={ "z-index": "3" })
				.fancybox.bounce.center.supercenter(style={ width: "47%", height: "25%" })
					#preDelete
						h2.smaller.center(style={ "font-size": "5.5vh" }) Delete
						p.bigger.center(style={ "line-height": "6vh", "margin-top": "1.5vh" })
							| Are you sure you want to
							|
							cr delete
							|
							| this message?
						img.gdButton.center.sideSpaceB(src="/assets/textbuttons/cancel-green.png", style={ height: "7vh" }, onclick="$('#confirmDelete').hide()")
						img#deleteCurrentMessage.gdButton.center.sideSpaceB(src="/assets/textbuttons/delete.png", style={ height: "7vh"})

					#deleting(style={ display: "none" })
						h2.smaller.center(style={ "font-size": "5.5vh" }) Delete
						p.smaller.center(style={ "line-height": "6vh", "margin-top": "1.5vh" }) Deleting message...
						img.spin.noSelect(src="/assets/loading.png", style={ height: "10vh", "margin-top": "-2%" })

					#delete-error(style={ display: "none" })
						img.gdButton(src="/assets/close.png", style={ width: "15vh", position: "absolute", top: "-35%", left: "-11vh" }, onclick="$('#delete-error').hide(); $('#confirmDelete').hide(); $('#preDelete').show()")
						img(src="/assets/exclamation.png", style={ height: "12vh" })
						p.bigger(style={ "margin-bottom": "0", "margin-top": "1vh" }) Something went wrong!
						p#delError(style={ "font-size": "2.4vh", "margin-top": "1vh" })

			#bulkDelete.popup
				.fancybox.bounce.center.supercenter(style={ width: "47%", height: "25%" })
					#preBulkDelete
						h2.smaller.center(style={ "font-size": "5.5vh" }) Delete
						p.bigger.center(style={ "line-height": "6vh", "margin-top": "1.5vh" })
							| Are you sure you want to
							|
							cr delete
							|
							span.selectedAmount(style={ color: "yellow" })
							| ?
						img.gdButton.center.sideSpaceB(src="/assets/textbuttons/cancel-green.png", style={ height: "29%" }, onclick="$('#bulkDelete').hide()")
						img#deleteCurrentMessage.gdButton.center.sideSpaceB(src="/assets/textbuttons/delete.png", style={ height: "29%"})

					#bulkDeleting(style={ display: "none" })
						h2.smaller.center(style={ "font-size": "5.5vh" }) Delete
						p.smaller.center(style={ "line-height": "6vh", "margin-top": "1.5vh" })
							| Deleting
							|
							span.selectedAmount
							| ...
						img.spin.noSelect(src="/assets/loading.png", style={ height: "10vh", "margin-top": "-2%" })

					#bd-error(style={ display: "none" })
						img.gdButton(src="/assets/close.png", style={ width: "15%", position: "absolute", top: "-17.5%", left: "-5.5vh" }, onclick="$('#delete-error').hide(); $('#confirmDelete').hide(); $('#preDelete').show()")
						img(src="/assets/exclamation.png", style={ height: "12vh" })
						p.bigger(style={ "margin-bottom": "0", "margin-top": "1vh%" }) Something went wrong!
						p#delError(style={ "font-size": "2.4vh", "margin-top": "1vh" })

			#selectedMessage.popup
				.bounce.center.supercenter(style={ height: "70%", width: "115vh" })
					.blueBox.center.supercenter(style={ width: "100%", height: "100%" })
						img.gdButton(src="/assets/close.png", style={ width: "9%", position: "absolute", top: "-7.5%", left: "-6.5vh" }, onclick="$('#selectedMessage').hide()")
						h1#messageSubject.smaller.center(style={ "font-size": "5.5vh", "min-height": "9%", "margin-top": "1%" })
						h3#messageAuthor.gold.center.gauntletText.gdButton
						#theMfMessage.transparentBox.center
							//- The motherf***ing mesage
							img#messageLoad.spin.noSelect(src="/assets/loading.png", style={ width: "10%", "margin-top": "15%" })
							p#messageBody
						#messageOptions
							img#replyButton.gdButton(style={ width: "8%" }, title="Reply", src="/assets/reply.png")
							img#deleteButton.gdButton(style={ width: "8%" }, title="Reply", src="/assets/trash.png", onclick="$('#confirmDelete').show()")

			#sendMessage.popup
				.bounce.center.supercenter(style={ width: "115vh", height: "70%" })
					.blueBox.center.supercenter(style={ width: "100%", height: "100%" })
						h1#sendreply.smaller.center(style={ "font-size": "5.5vh", "min-height": "9%", "margin-top": "1%" }) Send Reply
						h3#replyAuthor.gold.center.gauntletText.gdButton(style={ "min-height": "6.2%" })
						#textareas
							textarea#postSubject.messageInput(maxlength="50", style={ height: "7vh", "white-space": "nowrap !important" }, placeholder="Subject")
							textarea#postContent.messageInput(maxlength="300", style={ height: "35vh" }, placeholder="Message")
						p#messageStatus(style={ margin: "1% 0 1.5% 0", "min-height": "5%" })
						img.gdButton.center(src="/assets/textbuttons/cancel.png", style={ height: "10%" }, onclick="$('textarea').val(''); $('#sendMessage').hide()")
						img#postMessage.gdButton.center.sideSpaceB(src="/assets/textbuttons/submit.png", style={ height: "10%" })
						img.gdButton.center.sideSpaceB(src="/assets/trash.png", style={ height: "10%", position: "absolute", right: "0" }, onclick="$('#postContent').val('');")

			#postingMessage.popup(style={ "z-index": "3" })
				.blueBox.bounce.center.supercenter(style={ width: "55vh", height: "27%" })
					#reply-loading
						img.spin.noSelect(src="/assets/loading.png", style={ height: "12vh", "margin-top": "7.5%" })
						p.bigger Sending...

					#reply-sent(style={ display: "none" })
						img.gdButton(src="/assets/close.png", style={ width: "15%", position: "absolute", top: "-17.5%", left: "-5.5vh" }, onclick="$('.popup').hide()")
						img(src="/assets/check.png", style={ height: "12vh", "margin-top": "7.5%" })
						p.bigger Message sent!

					#reply-error(style={ display: "none" })
						img.gdButton(src="/assets/close.png", style={ width: "15%", position: "absolute", top: "-17.5%", left: "-5.5vh" }, onclick="$('.popup').hide()")
						img(src="/assets/exclamation.png", style={ height: "12vh", "margin-top": "7.5%" })
						p.bigger(style={ "margin-bottom": "0" }) Something went wrong!
						p(style={ "font-size": "2.4vh", "margin-top": "1%" }) Does the recipient have messages enabled?

			div(style={ position: "absolute", bottom: "0", left: "0", width: "100%", "pointer-events": "none" })
				img.cornerPiece(src="/assets/corner.png", style={ height: "14vh" })

			div(style={ position: "absolute", bottom: "0", left: "0", width: "100%", "text-align": "right", "pointer-events": "none" })
				img.cornerPiece(src="/assets/corner.png", style={ height: "14vh", transform: "scaleX(-1)" })

			div(style={ position: "absolute", top: "2%", left: "1.5%", width: "10%", height: "25%", "pointer-events": "none" })
				img#backButton.gdButton.yesClick(src="/assets/back.png", style={ height: "30%" })

		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
		script(type="module", src="/vendor/index.js")
		script(type="module", src="/misc/global.js")
		script(type="module", src="/scripts/messages.js")