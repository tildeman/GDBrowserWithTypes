doctype html
html(lang="en")
	head
		title#tabTitle List Search
		meta(charset="UTF-8")
		link(href="/assets/css/browser.css?v=1", type="text/css", rel="stylesheet")
		link(rel="icon", href="/assets/coin.png")
		meta(id="meta-title", property="og:title", content="List Search")
		meta(id="meta-desc", property="og:description", content="Search for Geometry Dash lists, and filter by category, difficulty + more!")
		meta(id="meta-image", name="og:image", content="/coin.png", itemprop="image")
		meta(name="twitter:card", content="summary")
	body.levelBG
		#everything(style={ overflow: "auto" })
			#pageDiv.popup
				.brownBox.bounce.center.supercenter(style={ width: "60vh", height: "34%" })
					h2.smaller.center(style={ "font-size": "5.5vh", "margin-top": "1%" }) Jump to Page
					input#pageSelect(type="number", placeholder="1", style={ "margin-left": "35%", display: "block" })
					img#pageJump.gdButton.center.closeWindow(src="/assets/ok.png", style={ height: "20%" })
					img.closeWindow.gdButton(src="/assets/close.png", style={ height: "25%", position: "absolute", top: "-13.5%", left: "-6vh" })

					.supercenter(style={ left: "25%", top: "43%", height: "10%" })
						img#prevResult.gdButton(src="/assets/whitearrow-left.png" style={ height: "160%" })

					.supercenter(style={ left: "75%", top: "43%", height: "10%" })
						img#nextResult.gdButton(src="/assets/whitearrow-right.png" style={ height: "160%" })

			#shuffleDiv.popup
				.fancybox.bounce.center.supercenter(style={ width: "35%", height: "40%" })
					h2.smaller.center(style={ "font-size": "5.5vh" }) Random Level
					p.bigger.center(style={ "line-height": "5vh", "margin-top": "1.5vh" })
						| A random list cannot be picked with your current
						|
						cy search filters!
						|
						| This is because there is no way to tell how many results were found, due to the GD servers inaccurately saying there's
						|
						cg 9999
						| .
					img.gdButton.center.closeWindow(src="/assets/ok.png", style={ height: "20%" })

			.bottomLeftCornerBox.cornerBox
				img.cornerPiece(src="/assets/corner.png")

			.bottomRightCornerBox.cornerBox
				img.cornerPiece(src="/assets/corner.png")

			#searchBox.supercenter.dragscroll
				div(style={ height: "4.5%" })

			.epicbox.supercenter.gs.noClick(style={ width: "120vh", height: "80%" })

			.center(style={ position: "absolute", top: "8%", left: "0", right: "0" })
				h1#header

			div(style={ "text-align": "right", position: "absolute", top: "1%", right: "2%" })
				h2#pagenum.smaller(style={ "font-size": "4.5vh" })

			div(title="Jump to page", style={ "text-align": "right", position: "absolute", top: "7.5%", right: "2%", height: "12%" })
				img.gdButton(src="/assets/magnify.png", style={ height: "60%", "margin-top": "5%" }, onclick="$('#pageDiv').show(); $('#pageSelect').trigger('focus').trigger('select')")

			#shuffle(title="Random level", style={ display: "none", "text-align": "right", position: "absolute", top: "7.5%", right: "6.5%", height: "12%" })
				img.gdButton(src="/assets/random.png", style={ height: "60%", "margin-top": "5%" })

			#lastPage(title="Last page", style={ display: "none", "text-align": "right", position: "absolute", top: "7.5%", right: "11%", height: "11%" })
				img.gdButton(src="/assets/double-arrow.png", style={ height: "60%", "margin-top": "5%" })

			.backButtonContainer
				img#backButton.gdButton(src="/assets/back.png")

			div(style={ position: "absolute", bottom: "2%", right: "1%", width: "15%", "text-align": "right" })
				img#refreshPage.gdButton(src="/assets/refresh.png", style={ width: "40%" })

			div(style={ position: "absolute", left: "7%", top: "45%", height: "10%" })
				img#pageDown.gdButton(src="/assets/arrow-left.png", style={ display: "none", height: "90%" })

			div(style={ position: "absolute", right: "7%", top: "45%", height: "10%" })
				img#pageUp.gdButton(src="/assets/arrow-right.png", style={ display: "none", height: "90%" })

			#loading.supercenter(style={ height: "10%", top: "47%", display: "none" })
				img.spin.noSelect(src="/assets/loading.png", style={ height: "105%" })

		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
		script(type="module", src="/vendor/index.js")
		script(type="module", src="/misc/global.js")
		script(type="module", src="/dragscroll.js")
		script(type="module", src="/scripts/listsearch.js")