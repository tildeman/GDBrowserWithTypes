{
	"compilerOptions": {
		"allowJs": true,
		"outDir": "./out",
		"target": "esnext",
		"module": "esnext",
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "./src/vendor"
	},

	"include": ["vendor/**/*"]
}